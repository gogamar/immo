<!-- ============================ Page Title Start================================== -->
<div class="page-title">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-md-12">
        <h2 class="ipt-title">Notícies</h2>
        <span class="ipn-subtitle">Últimes notícies del sector</span>
      </div>
    </div>
  </div>
</div>
<!-- ============================ Page Title End ================================== -->
<!-- ============================ Agency List Start ================================== -->
<section class="gray-simple">
  <div class="container">
    <div class="row">
      <div class="col text-center">
        <div class="sec-heading center">
          <h2>Notícies i retallades de premsa</h2>
          <p>Descobreix les novetats del mercat immobiliari a Catalunya</p>
        </div>
      </div>
    </div>
    <!-- row Start -->
    <div class="row">
      <% @posts.each do |post| %>
        <%= render post %>
      <% end %>
    </div>
    <!-- /row -->
    <!-- Pagination -->
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12">
        <ul class="pagination p-center">
          <!-- Pagination -->
          <%== pagy_bootstrap_nav(@pagy) %>
          <!-- End Pagination -->
        </ul>
      </div>
    </div>
  </div>
</section>
<!-- ============================ Agency List End ================================== -->
