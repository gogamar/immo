<!-- Single blog Grid -->
<div class="col-lg-4 col-md-6">
  <div class="blog-wrap-grid">
    <div class="blog-thumb">
      <%= link_to post do %>
        <%= cl_image_tag post.photo.key, height: 300, width: 400, crop: :fill, class: "img-fluid", alt: "#{post.title_ca}" if post.photo.key.present? %>
      <% end %>
    </div>
    <div class="blog-info">
      <span class="post-date"><i class="fas fa-calendar-alt"></i><%= l(post.updated_at.to_date) %></span>
    </div>
    <div class="blog-body">
      <h4 class="bl-title">
        <%= link_to post.title_ca, post %>
      </h4>
      <%= link_to post do %>
        <p> <%= sanitize (post.content_ca.truncate(200)) %> </p>
      <% end %>
      <%= link_to "Llegir mÃ©s", post, class: "bl-continue" %>
    </div>
  </div>
</div>
