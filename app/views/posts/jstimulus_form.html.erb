<%= simple_form_for @post, data: { controller: "translate"} do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :author %>
    <%= @original_post.to_json %>
    <%= f.input :content, as: :ckeditor, input_html: { ckeditor: { toolbar: 'full' }, data: { "translate-target" => "text", "translate-content-value" => "<%= @original_post %>"}}  %>
    <button class="btn btn-black btn-md rounded full-width" data-action="click->translate#translate" data-translate-target="button">Traduir</button>
    <%= f.input :content_es, as: :ckeditor, input_html: { ckeditor: { toolbar: 'full' }, data: {"translate-target" => "translated"}}  %>
    <%= f.input :photo, as: :file, input_html: { class: "form-control-photo" }  %>
    <%= f.association :category %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-black btn-md rounded full-width" %>
  </div>
<% end %>
