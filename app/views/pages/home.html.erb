<section class="bg-light">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-7 col-md-10 text-center">
        <div class="sec-heading center">
          <h2>Buscar per ubicació</h2>
          <p>At vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis praesentium voluptatum deleniti atque corrupti quos dolores</p>
        </div>
      </div>
    </div>
    <div class="row">
      <% @all_towns.each do |town| %>
        <div class="col-lg-4 col-md-4">
          <div class="location-property-wrap">
            <div class="location-property-thumb">
              <% if town.photo.attached? %>
                <a href="listings-list-with-sidebar.html"> <img src="<%= cl_image_path town.photo.key, height: 236, crop: :fill %>" class="image-fluid" alt="<%= town.name %>">
                </a>
              <% else %>
                <a href="listings-list-with-sidebar.html"><img src="https://via.placeholder.com/1200x800" class="img-fluid" alt="" /></a>
              <% end %>
            </div>
            <div class="location-property-content">
              <div class="lp-content-flex">
                <h4 class="lp-content-title"><%= town.name %></h4>
                <%= town.name %>
                <% if town.realestates.count == 1 %>
                  <span> <%= town.realestates.count %> immoble </span>
                <% else %>
                  <span> <%= town.realestates.count %> immobles </span>
                <% end %>
              </div>
              <div class="lp-content-right">
                <a href="listings-list-with-sidebar.html" class="lp-property-view"><i class="fa-solid fa-chevron-right"></i></a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 text-center">
        <a href="listings-list-with-sidebar.html" class="btn btn-theme-light rounded">Browse More Locations</a>
      </div>
    </div>
  </div>
</section>
